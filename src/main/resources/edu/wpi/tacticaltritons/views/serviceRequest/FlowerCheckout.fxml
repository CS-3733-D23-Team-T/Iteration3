                </MFXTextField>
                <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="50.0" prefWidth="220.0">
                    <children>
                        <MFXButton id="cancelButton" fx:id="cancelButton" prefHeight="29.0" prefWidth="100.0" text="Cancel">
