                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </FlowPane.margin>
                </MFXFilterComboBox>
                <MFXDatePicker fx:id="deliveryDateField" floatingText="Date" prefHeight="50.0" prefWidth="200.0">
