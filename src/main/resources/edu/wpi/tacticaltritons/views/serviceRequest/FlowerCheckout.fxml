                    </children>
                </FlowPane>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </FlowPane>
    </left>
    <right>
        <BorderPane id="block" prefHeight="600" prefWidth="400.0" BorderPane.alignment="CENTER">
            <center>
                <MFXScrollPane id="dashBoard" prefWidth="300.0" BorderPane.alignment="CENTER">
