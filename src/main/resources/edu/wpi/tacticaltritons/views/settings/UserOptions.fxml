                    </font>
                    <FlowPane.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </FlowPane.margin>
                </MFXButton>
                <MFXButton id="normalButton" fx:id="changeEmailButton" alignment="CENTER" minHeight="33.0" minWidth="154.0" text="Change Email">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <FlowPane.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </FlowPane.margin>
                </MFXButton>
                <MFXButton id="normalButton" fx:id="changePasswordButton" alignment="CENTER" minHeight="33.0" minWidth="154.0" text="Change Password">
